{
  "version": 2,
  "buildCommand": "true",
  "outputDirectory": ".",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*\\.(?:js|css|html|png|jpg|jpeg|gif|svg|ico|json|xml|txt)$|^/$)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
